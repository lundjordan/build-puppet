<%
if ! scope.lookupvar('::masterizing')
  servers = [ @data_server ] + Array(@data_servers)
  servers.uniq.each do |mirror_server| -%>
https://<%= mirror_server %>/<%= @url_path %>
<% end
else -%>
file:///data/<%= @url_path %>
<% end -%>
