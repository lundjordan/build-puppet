---
:backends:
    - eyaml

:hierarchy:
    - environments/%{environment}_secrets
    - secrets<%- @puppetmaster_extsyncs.sort.each do |sync, params| %>
    - <%= sync %><% end %>

:eyaml:
    :datadir: '/etc/hiera'
    :pkcs7_private_key: /etc/hiera/keys/private_key.pem
    :pkcs7_public_key:  /etc/hiera/keys/public_key.pem
