<% [ 'http_proxy', 'HTTP_PROXY',
     'https_proxy', 'HTTPS_PROXY',
     'ftp_proxy', 'FTP_PROXY' ].each do |var| -%>
export <%= var %>="<%= @url %>"
<% end
if @exceptions
  exc_str = @exceptions.join(',')
%>
export no_proxy="<%= exc_str %>"
export NO_PROXY="<%= exc_str %>"
<%- end -%>
